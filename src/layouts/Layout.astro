---
import "@fontsource-variable/dm-sans";
import Navigation from "../components/Navigation.astro";
import { ViewTransitions } from "astro:transitions";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body>
    <div class="flex relative justify-center items-center min-h-screen">
      <img
        class="w-full absolute -z-10 top-0 bg-cover h-[300px]"
        src="/images/bg-cafe.jpg"
        alt="coffe background"
      />
      <main class="flex flex-col gap-10 bg-[#111315] rounded-lg w-10/12 relative overflow-hidden py-10  px-4 md:px-16 lg:px-24">
        <img class="absolute left-[200px] md:left-[500px] lg:left-[800px] top-3 z-10" src="/images/vector.svg" alt="Vector image" />
        <Navigation />
        <slot />
      </main>
    </div>
  </body>
</html>
<style is:global>
  :root {
    color-scheme: dark light;
    color: #fef7ee;
  }

  html {
    font-family: "DM Sans Variable", system-ui, sans-serif;
    background: #1b1d1f;
  }
</style>

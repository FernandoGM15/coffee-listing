---
interface Props {
  link: string;
}

const { link } = Astro.props;

const currentPath = Astro.url.pathname;
---

<a
  href={link}
  class:list={[
    "py-2",
    "px-4",
    "hover:bg-[#6F757C]",
    "rounded-md",
    "font-semibold",
    "transition-colors",
    "duration-200",
    { "bg-[#6F757C]": currentPath === link },
  ]}
>
  <slot />
</a>
